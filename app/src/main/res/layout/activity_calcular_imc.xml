<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CalcularIMCActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <EditText
            android:id="@+id/pesoInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/ingresar_peso"
            android:inputType="numberDecimal"
            />

        <EditText
            android:id="@+id/alturaInput"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="@string/ingresar_altura"
            android:inputType="numberDecimal"  />


        <Button
            android:id="@+id/calcularButton"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:text="@string/calcular_imc"
            />

        <TextView
            android:id="@+id/resultadoIMCTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/resultado_imc" />

        <TextView
            android:id="@+id/pesoIdealTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/peso_ideal"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:textColor="@android:color/black" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
